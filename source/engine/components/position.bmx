'------------------------------------------------------------------------------
' Component: TPosition
'------------------------------------------------------------------------------
Type TPosition

'------------------------------------------------------------------------------
' Properties of TPosition (z defines the Zoom Level)
'------------------------------------------------------------------------------
	Field x:Float = 0
	Field y:Float = 0
	Field z:Float = 1.0
	

'------------------------------------------------------------------------------
' Set Position to a specific 2D point
'------------------------------------------------------------------------------
	Method Set( xpos:Float, ypos:Float )
		x = xpos
		y = ypos
	EndMethod
	

'------------------------------------------------------------------------------
' Move the position
'------------------------------------------------------------------------------
	Method Move( mx:Float, my:Float )
		x:+ mx
		y:+ my
	EndMethod
	

EndType
